@model IEnumerable<ClinicMIS.Models.Entities.Clinic>
@using ClinicMIS.Models.Entities
@{
    ViewData["Title"] = "Clinics";
    var activeCount = Model.Count(c => c.IsActive);
    var totalStaff = Model.Sum(c => c.Staff.Count);
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <span class="text-muted">@Model.Count() clinics (@activeCount active)</span>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-building-add me-1"></i> Add Clinic
    </a>
</div>

<!-- Summary Cards -->
<div class="row mb-4">
    <div class="col-md-4">
        <div class="card stat-card primary h-100">
            <div class="card-body d-flex align-items-center">
                <div class="stat-icon me-3">
                    <i class="bi bi-building"></i>
                </div>
                <div>
                    <div class="text-muted small">Total Clinics</div>
                    <div class="fs-4 fw-bold">@Model.Count()</div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card stat-card success h-100">
            <div class="card-body d-flex align-items-center">
                <div class="stat-icon me-3">
                    <i class="bi bi-check-circle"></i>
                </div>
                <div>
                    <div class="text-muted small">Active Clinics</div>
                    <div class="fs-4 fw-bold text-success">@activeCount</div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card stat-card warning h-100">
            <div class="card-body d-flex align-items-center">
                <div class="stat-icon me-3">
                    <i class="bi bi-people"></i>
                </div>
                <div>
                    <div class="text-muted small">Total Staff</div>
                    <div class="fs-4 fw-bold">@totalStaff</div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Clinics Grid -->
<div class="row">
    @foreach (var clinic in Model.OrderBy(c => c.Name))
    {
        var doctorCount = clinic.Staff.Count(s => s.Role == StaffRole.Doctor);
        var nurseCount = clinic.Staff.Count(s => s.Role == StaffRole.Nurse);
        
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100 @(!clinic.IsActive ? "border-secondary" : "")">
                <div class="card-header d-flex justify-content-between align-items-center @(!clinic.IsActive ? "bg-secondary bg-opacity-10" : "")">
                    <h6 class="mb-0">
                        <i class="bi bi-building me-2 text-primary"></i>
                        @clinic.Name
                    </h6>
                    @if (clinic.IsActive)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactive</span>
                    }
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(clinic.Description))
                    {
                        <p class="text-muted small mb-3">@clinic.Description</p>
                    }
                    
                    <div class="d-flex flex-wrap gap-2 mb-3">
                        @if (!string.IsNullOrEmpty(clinic.Location))
                        {
                            <span class="badge bg-light text-dark">
                                <i class="bi bi-geo-alt me-1"></i>@clinic.Location
                            </span>
                        }
                        @if (!string.IsNullOrEmpty(clinic.ContactPhone))
                        {
                            <span class="badge bg-light text-dark">
                                <i class="bi bi-telephone me-1"></i>@clinic.ContactPhone
                            </span>
                        }
                    </div>
                    
                    <hr class="my-2" />
                    
                    <div class="d-flex justify-content-between small">
                        <div>
                            <i class="bi bi-person-badge text-primary me-1"></i>
                            <span class="fw-medium">@doctorCount</span> Doctors
                        </div>
                        <div>
                            <i class="bi bi-heart-pulse text-info me-1"></i>
                            <span class="fw-medium">@nurseCount</span> Nurses
                        </div>
                        <div>
                            <i class="bi bi-people text-secondary me-1"></i>
                            <span class="fw-medium">@clinic.Staff.Count</span> Total
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent">
                    <div class="d-flex gap-2">
                        <a asp-action="Details" asp-route-id="@clinic.ClinicId" 
                           class="btn btn-sm btn-outline-primary flex-grow-1">
                            <i class="bi bi-eye me-1"></i> View
                        </a>
                        <a asp-action="Edit" asp-route-id="@clinic.ClinicId" 
                           class="btn btn-sm btn-outline-secondary">
                            <i class="bi bi-pencil"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="card">
        <div class="card-body text-center py-5">
            <i class="bi bi-building fs-1 text-muted d-block mb-3"></i>
            <h5 class="text-muted">No clinics found</h5>
            <p class="text-muted">Get started by adding your first clinic</p>
            <a asp-action="Create" class="btn btn-primary">Add Clinic</a>
        </div>
    </div>
}
