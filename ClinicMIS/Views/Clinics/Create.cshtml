@model ClinicMIS.Models.Entities.Clinic
@{
    ViewData["Title"] = "Add Clinic";
}

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-building-add me-2"></i>New Clinic/Department
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    
                    <!-- Basic Information -->
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" placeholder="e.g., Cardiology, Oncology, Neurology" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="3"
                                  placeholder="Brief description of the clinic's services..."></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="Location" class="form-label"></label>
                            <input asp-for="Location" class="form-control" placeholder="e.g., Building A, Floor 2" />
                            <span asp-validation-for="Location" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="ContactPhone" class="form-label"></label>
                            <input asp-for="ContactPhone" class="form-control" placeholder="e.g., (555) 123-4567" />
                            <span asp-validation-for="ContactPhone" class="text-danger small"></span>
                        </div>
                    </div>
                    
                    <hr class="my-4" />
                    
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg me-1"></i> Create Clinic
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
