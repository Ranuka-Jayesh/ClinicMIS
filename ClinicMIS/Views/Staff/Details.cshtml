@model ClinicMIS.Models.Entities.Staff
@using ClinicMIS.Models.Entities
@{
    ViewData["Title"] = "Staff Details";
    var roleClass = Model.Role switch
    {
        StaffRole.Admin => "bg-danger",
        StaffRole.Doctor => "bg-primary",
        StaffRole.Nurse => "bg-info",
        StaffRole.Pharmacist => "bg-success",
        StaffRole.Receptionist => "bg-warning text-dark",
        _ => "bg-secondary"
    };
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row">
    <div class="col-lg-8">
        <!-- Staff Profile Card -->
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <div>
                    <i class="bi bi-person-badge me-2"></i>Staff Profile
                </div>
                <div>
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactive</span>
                    }
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-8">
                        <h4 class="mb-1">@Model.DisplayTitle</h4>
                        <span class="badge @roleClass mb-3">@Model.Role</span>
                        
                        @if (!string.IsNullOrEmpty(Model.Specialization))
                        {
                            <p class="text-muted mb-3">
                                <i class="bi bi-award me-1"></i>@Model.Specialization
                            </p>
                        }
                    </div>
                    <div class="col-md-4 text-md-end">
                        <code class="text-primary fs-5">@Model.EmployeeNumber</code>
                    </div>
                </div>
                
                <hr />
                
                <div class="row">
                    <div class="col-md-6">
                        <h6 class="text-muted mb-3"><i class="bi bi-person me-2"></i>Personal Information</h6>
                        <dl class="row mb-0">
                            <dt class="col-sm-5">First Name</dt>
                            <dd class="col-sm-7">@Model.FirstName</dd>
                            
                            <dt class="col-sm-5">Last Name</dt>
                            <dd class="col-sm-7">@Model.LastName</dd>
                            
                            <dt class="col-sm-5">License Number</dt>
                            <dd class="col-sm-7">@(Model.LicenseNumber ?? "â€”")</dd>
                            
                            <dt class="col-sm-5">Hire Date</dt>
                            <dd class="col-sm-7">@Model.HireDate.ToString("MMM dd, yyyy")</dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <h6 class="text-muted mb-3"><i class="bi bi-telephone me-2"></i>Contact Information</h6>
                        <dl class="row mb-0">
                            <dt class="col-sm-5">Email</dt>
                            <dd class="col-sm-7">
                                <a href="mailto:@Model.Email">@Model.Email</a>
                            </dd>
                            
                            <dt class="col-sm-5">Phone</dt>
                            <dd class="col-sm-7">
                                <a href="tel:@Model.PhoneNumber">@Model.PhoneNumber</a>
                            </dd>
                            
                            <dt class="col-sm-5">Assigned Clinic</dt>
                            <dd class="col-sm-7">@(Model.Clinic?.Name ?? "Not assigned")</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Account Information -->
        <div class="card mb-4">
            <div class="card-header">
                <i class="bi bi-key me-2"></i>Account Information
            </div>
            <div class="card-body">
                @if (Model.User != null)
                {
                    <div class="d-flex align-items-center">
                        <div class="me-3">
                            <i class="bi bi-person-check fs-2 text-success"></i>
                        </div>
                        <div>
                            <h6 class="mb-1">User Account Active</h6>
                            <p class="text-muted mb-0 small">
                                Username: @Model.User.Email<br />
                                Account Status: @(Model.User.IsActive ? "Active" : "Disabled")
                            </p>
                        </div>
                    </div>
                }
                else
                {
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center">
                            <div class="me-3">
                                <i class="bi bi-person-x fs-2 text-warning"></i>
                            </div>
                            <div>
                                <h6 class="mb-1">No User Account</h6>
                                <p class="text-muted mb-0 small">
                                    This staff member cannot log in to the system.
                                </p>
                            </div>
                        </div>
                        <div>
                            <a asp-action="CreateUserAccount" asp-route-id="@Model.StaffId" class="btn btn-success">
                                <i class="bi bi-person-plus me-1"></i> Create Account
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <!-- Actions Card -->
        <div class="card mb-4">
            <div class="card-header">
                <i class="bi bi-gear me-2"></i>Actions
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.StaffId" class="btn btn-primary">
                        <i class="bi bi-pencil me-1"></i> Edit Details
                    </a>
                    
                    @if (Model.IsActive)
                    {
                        <form asp-action="Deactivate" asp-route-id="@Model.StaffId" method="post" 
                              onsubmit="return confirm('Are you sure you want to deactivate this staff member?');">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-outline-warning w-100">
                                <i class="bi bi-person-dash me-1"></i> Deactivate
                            </button>
                        </form>
                    }
                    else
                    {
                        <form asp-action="Activate" asp-route-id="@Model.StaffId" method="post">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-outline-success w-100">
                                <i class="bi bi-person-check me-1"></i> Activate
                            </button>
                        </form>
                    }
                    
                    <a asp-action="Delete" asp-route-id="@Model.StaffId" class="btn btn-outline-danger">
                        <i class="bi bi-trash me-1"></i> Delete
                    </a>
                    
                    <hr />
                    
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-1"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
        
        <!-- Quick Info Card -->
        <div class="card">
            <div class="card-header">
                <i class="bi bi-info-circle me-2"></i>Quick Info
            </div>
            <div class="card-body">
                <ul class="list-unstyled mb-0">
                    <li class="mb-2">
                        <small class="text-muted">Employee #</small><br />
                        <code>@Model.EmployeeNumber</code>
                    </li>
                    <li class="mb-2">
                        <small class="text-muted">Role</small><br />
                        <span class="badge @roleClass">@Model.Role</span>
                    </li>
                    <li class="mb-2">
                        <small class="text-muted">Clinic</small><br />
                        @(Model.Clinic?.Name ?? "Not assigned")
                    </li>
                    <li>
                        <small class="text-muted">Hire Date</small><br />
                        @Model.HireDate.ToString("MMM dd, yyyy")
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
