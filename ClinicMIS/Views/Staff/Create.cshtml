@model ClinicMIS.Models.ViewModels.StaffViewModel
@using ClinicMIS.Models.Entities
@{
    ViewData["Title"] = "Add Staff Member";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-person-plus me-2"></i>New Staff Member Registration
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    
                    <!-- Personal Information -->
                    <h6 class="text-primary mb-3"><i class="bi bi-person me-2"></i>Personal Information</h6>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="FirstName" class="form-label"></label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="LastName" class="form-label"></label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger small"></span>
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="Role" class="form-label"></label>
                            <select asp-for="Role" class="form-select">
                                <option value="">Select Role</option>
                                @foreach (StaffRole role in Enum.GetValues(typeof(StaffRole)))
                                {
                                    <option value="@((int)role)">@role</option>
                                }
                            </select>
                            <span asp-validation-for="Role" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Specialization" class="form-label"></label>
                            <input asp-for="Specialization" class="form-control" 
                                   placeholder="e.g., Cardiologist, Oncologist (for doctors)" />
                            <span asp-validation-for="Specialization" class="text-danger small"></span>
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="LicenseNumber" class="form-label"></label>
                            <input asp-for="LicenseNumber" class="form-control" 
                                   placeholder="Medical license number (if applicable)" />
                            <span asp-validation-for="LicenseNumber" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="HireDate" class="form-label"></label>
                            <input asp-for="HireDate" type="date" class="form-control" />
                            <span asp-validation-for="HireDate" class="text-danger small"></span>
                        </div>
                    </div>
                    
                    <!-- Contact Information -->
                    <h6 class="text-primary mb-3 mt-4"><i class="bi bi-telephone me-2"></i>Contact Information</h6>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="PhoneNumber" class="form-label"></label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" type="email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>
                    </div>
                    
                    <!-- Assignment -->
                    <h6 class="text-primary mb-3 mt-4"><i class="bi bi-building me-2"></i>Clinic Assignment</h6>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="ClinicId" class="form-label"></label>
                            <select asp-for="ClinicId" class="form-select">
                                <option value="">Select Clinic</option>
                                @if (Model.AvailableClinics != null)
                                {
                                    @foreach (var clinic in Model.AvailableClinics)
                                    {
                                        <option value="@clinic.ClinicId">@clinic.Name</option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="ClinicId" class="text-danger small"></span>
                        </div>
                    </div>
                    
                    <!-- User Account -->
                    <h6 class="text-primary mb-3 mt-4"><i class="bi bi-key me-2"></i>User Account</h6>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="form-check">
                                <input asp-for="CreateUserAccount" class="form-check-input" type="checkbox" id="createUserAccount" />
                                <label class="form-check-label" for="createUserAccount">
                                    Create login account for this staff member
                                </label>
                            </div>
                            <small class="text-muted">
                                If checked, the staff member will be able to log into the system
                            </small>
                        </div>
                        <div class="col-md-6" id="passwordSection">
                            <label asp-for="InitialPassword" class="form-label"></label>
                            <input asp-for="InitialPassword" type="password" class="form-control" 
                                   placeholder="Minimum 8 characters" />
                            <span asp-validation-for="InitialPassword" class="text-danger small"></span>
                        </div>
                    </div>
                    
                    <hr class="my-4" />
                    
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg me-1"></i> Create Staff Member
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const checkbox = document.getElementById('createUserAccount');
            const passwordSection = document.getElementById('passwordSection');
            
            function togglePasswordSection() {
                passwordSection.style.display = checkbox.checked ? 'block' : 'none';
            }
            
            checkbox.addEventListener('change', togglePasswordSection);
            togglePasswordSection();
        });
    </script>
}
