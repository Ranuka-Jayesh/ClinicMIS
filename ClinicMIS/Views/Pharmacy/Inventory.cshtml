@model ClinicMIS.Models.ViewModels.DrugListViewModel
@{
    ViewData["Title"] = "Drug Inventory";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <span class="text-muted">@Model.TotalCount drugs in inventory</span>
    </div>
    <div class="d-flex gap-2">
        <a asp-action="Index" class="btn btn-outline-primary">
            <i class="bi bi-prescription2 me-1"></i> Dispense Queue
        </a>
        <a asp-action="LowStock" class="btn btn-outline-warning">
            <i class="bi bi-exclamation-triangle me-1"></i> Low Stock
        </a>
        <a asp-action="CreateDrug" class="btn btn-primary">
            <i class="bi bi-plus-lg me-1"></i> Add Drug
        </a>
    </div>
</div>

<!-- Search and Filter -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-3">
                <label class="form-label small text-muted">Search</label>
                <div class="input-group input-group-sm">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <input type="text" name="searchTerm" class="form-control" 
                           placeholder="Code, name, generic..." value="@Model.SearchTerm" />
                </div>
            </div>
            <div class="col-md-2">
                <label class="form-label small text-muted">Category</label>
                <select name="category" class="form-select form-select-sm">
                    <option value="">All Categories</option>
                    @if (Model.AvailableCategories != null)
                    {
                        @foreach (var cat in Model.AvailableCategories)
                        {
                            <option value="@cat" selected="@(Model.Category == cat)">@cat</option>
                        }
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label small text-muted">Sort By</label>
                <select name="sortBy" class="form-select form-select-sm">
                    <option value="">Name</option>
                    <option value="stock" selected="@(Model.SortBy == "stock")">Stock Level</option>
                    <option value="expiry" selected="@(Model.SortBy == "expiry")">Expiry Date</option>
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label small text-muted d-block">&nbsp;</label>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" name="lowStockOnly" value="true" 
                           @(Model.LowStockOnly == true ? "checked" : "") id="lowStockOnly" />
                    <label class="form-check-label small" for="lowStockOnly">Low Stock</label>
                </div>
            </div>
            <div class="col-md-2">
                <label class="form-label small text-muted d-block">&nbsp;</label>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" name="expiringSoonOnly" value="true" 
                           @(Model.ExpiringSoonOnly == true ? "checked" : "") id="expiringSoon" />
                    <label class="form-check-label small" for="expiringSoon">Expiring Soon</label>
                </div>
            </div>
            <div class="col-md-1 d-flex align-items-end">
                <button type="submit" class="btn btn-outline-primary btn-sm w-100">
                    <i class="bi bi-funnel"></i>
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Inventory Table -->
<div class="card">
    <div class="card-body p-0">
        @if (Model.Drugs.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Code</th>
                            <th>Drug Name</th>
                            <th>Category</th>
                            <th>Form / Strength</th>
                            <th class="text-end">Unit Price</th>
                            <th class="text-center">Stock</th>
                            <th>Expiry</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var drug in Model.Drugs)
                        {
                            <tr class="@(drug.IsExpired ? "table-danger" : drug.IsLowStock ? "table-warning" : "")">
                                <td><code class="text-primary">@drug.DrugCode</code></td>
                                <td>
                                    <span class="fw-medium">@drug.Name</span>
                                    @if (drug.IsLowStock)
                                    {
                                        <i class="bi bi-exclamation-triangle text-warning ms-1" title="Low Stock"></i>
                                    }
                                    @if (drug.IsExpired)
                                    {
                                        <i class="bi bi-x-circle text-danger ms-1" title="Expired"></i>
                                    }
                                    else if (drug.IsExpiringSoon)
                                    {
                                        <i class="bi bi-clock text-warning ms-1" title="Expiring Soon"></i>
                                    }
                                </td>
                                <td><span class="badge bg-secondary">@drug.Category</span></td>
                                <td>@drug.DosageForm / @drug.Strength</td>
                                <td class="text-end">@drug.UnitPrice.ToString("C")</td>
                                <td class="text-center">
                                    @if (drug.IsLowStock)
                                    {
                                        <span class="badge bg-danger">@drug.QuantityInStock</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">@drug.QuantityInStock</span>
                                    }
                                    <small class="text-muted d-block">Min: @drug.ReorderLevel</small>
                                </td>
                                <td>
                                    @if (drug.ExpiryDate.HasValue)
                                    {
                                        <span class="@(drug.IsExpired ? "text-danger" : drug.IsExpiringSoon ? "text-warning" : "")">
                                            @drug.ExpiryDate.Value.ToString("MMM yyyy")
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">â€”</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="EditDrug" asp-route-id="@drug.DrugId" 
                                           class="btn btn-outline-primary" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <button type="button" class="btn btn-outline-success" 
                                                data-bs-toggle="modal" data-bs-target="#stockModal"
                                                data-drug-id="@drug.DrugId" 
                                                data-drug-name="@drug.Name"
                                                data-current-stock="@drug.QuantityInStock"
                                                title="Adjust Stock">
                                            <i class="bi bi-box-seam"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            
            <!-- Pagination -->
            @if (Model.TotalPages > 1)
            {
                <nav class="d-flex justify-content-between align-items-center p-3 border-top">
                    <div class="text-muted small">
                        Showing @((Model.CurrentPage - 1) * Model.PageSize + 1) to 
                        @Math.Min(Model.CurrentPage * Model.PageSize, Model.TotalCount) of @Model.TotalCount
                    </div>
                    <ul class="pagination pagination-sm mb-0">
                        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link" href="?currentPage=@(Model.CurrentPage - 1)&searchTerm=@Model.SearchTerm&category=@Model.Category&lowStockOnly=@Model.LowStockOnly&expiringSoonOnly=@Model.ExpiringSoonOnly&sortBy=@Model.SortBy">
                                <i class="bi bi-chevron-left"></i>
                            </a>
                        </li>
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" href="?currentPage=@i&searchTerm=@Model.SearchTerm&category=@Model.Category&lowStockOnly=@Model.LowStockOnly&expiringSoonOnly=@Model.ExpiringSoonOnly&sortBy=@Model.SortBy">@i</a>
                            </li>
                        }
                        <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                            <a class="page-link" href="?currentPage=@(Model.CurrentPage + 1)&searchTerm=@Model.SearchTerm&category=@Model.Category&lowStockOnly=@Model.LowStockOnly&expiringSoonOnly=@Model.ExpiringSoonOnly&sortBy=@Model.SortBy">
                                <i class="bi bi-chevron-right"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            }
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-capsule fs-1 text-muted d-block mb-3"></i>
                <h5 class="text-muted">No drugs found</h5>
                @if (!string.IsNullOrEmpty(Model.SearchTerm) || !string.IsNullOrEmpty(Model.Category) || 
                     Model.LowStockOnly == true || Model.ExpiringSoonOnly == true)
                {
                    <p class="text-muted">Try adjusting your filter criteria</p>
                    <a href="@Url.Action("Inventory")" class="btn btn-outline-primary">Clear Filters</a>
                }
                else
                {
                    <p class="text-muted">Get started by adding drugs to the inventory</p>
                    <a asp-action="CreateDrug" class="btn btn-primary">Add Drug</a>
                }
            </div>
        }
    </div>
</div>

<!-- Stock Adjustment Modal -->
<div class="modal fade" id="stockModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="AdjustStock" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="DrugId" id="modalDrugId" />
                <div class="modal-header">
                    <h5 class="modal-title"><i class="bi bi-box-seam me-2"></i>Adjust Stock</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p class="mb-3">
                        <strong id="modalDrugName"></strong><br>
                        <span class="text-muted">Current Stock: <span id="modalCurrentStock" class="fw-bold"></span></span>
                    </p>
                    <div class="mb-3">
                        <label class="form-label">Adjustment Type</label>
                        <div class="btn-group w-100" role="group">
                            <input type="radio" class="btn-check" name="IsAddition" value="true" id="addStock" checked>
                            <label class="btn btn-outline-success" for="addStock">
                                <i class="bi bi-plus-lg me-1"></i>Add Stock
                            </label>
                            <input type="radio" class="btn-check" name="IsAddition" value="false" id="removeStock">
                            <label class="btn btn-outline-danger" for="removeStock">
                                <i class="bi bi-dash-lg me-1"></i>Remove Stock
                            </label>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="adjustmentQty" class="form-label">Quantity</label>
                        <input type="number" class="form-control" id="adjustmentQty" name="AdjustmentQuantity" 
                               min="1" required />
                    </div>
                    <div class="mb-3">
                        <label for="reason" class="form-label">Reason</label>
                        <select class="form-select" name="Reason" id="reason" required>
                            <option value="">Select reason...</option>
                            <option value="Received new shipment">Received new shipment</option>
                            <option value="Returned by patient">Returned by patient</option>
                            <option value="Stock correction">Stock correction</option>
                            <option value="Damaged/Expired">Damaged/Expired</option>
                            <option value="Inventory count adjustment">Inventory count adjustment</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-lg me-1"></i>Adjust Stock
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var stockModal = document.getElementById('stockModal');
            stockModal.addEventListener('show.bs.modal', function(event) {
                var button = event.relatedTarget;
                var drugId = button.getAttribute('data-drug-id');
                var drugName = button.getAttribute('data-drug-name');
                var currentStock = button.getAttribute('data-current-stock');
                
                document.getElementById('modalDrugId').value = drugId;
                document.getElementById('modalDrugName').textContent = drugName;
                document.getElementById('modalCurrentStock').textContent = currentStock;
                document.getElementById('adjustmentQty').value = '';
                document.getElementById('reason').value = '';
                document.getElementById('addStock').checked = true;
            });
        });
    </script>
}
