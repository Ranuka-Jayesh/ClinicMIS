@model ClinicMIS.Models.Entities.Patient
@{
    ViewData["Title"] = "Delete Patient";
    var visitCount = (int)ViewBag.VisitCount;
    var prescriptionCount = (int)ViewBag.PrescriptionCount;
    var hasRelatedRecords = (bool)ViewBag.HasRelatedRecords;
}

<div class="container-fluid">
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Patients</a></li>
            <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.PatientId">@Model.FirstName @Model.LastName</a></li>
            <li class="breadcrumb-item active">Delete</li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        Confirm Delete
                    </h5>
                </div>
                <div class="card-body">
                    @if (hasRelatedRecords)
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            <strong>Warning!</strong> This patient has associated records:
                            <ul class="mb-0 mt-2">
                                @if (visitCount > 0)
                                {
                                    <li><strong>@visitCount</strong> visit(s)</li>
                                }
                                @if (prescriptionCount > 0)
                                {
                                    <li><strong>@prescriptionCount</strong> prescription(s)</li>
                                }
                            </ul>
                            <hr />
                            <small>Deleting this patient will also mark all related records as deleted.</small>
                        </div>
                    }

                    <div class="alert alert-danger">
                        <i class="bi bi-exclamation-octagon me-2"></i>
                        <strong>Warning!</strong> You are about to permanently delete this patient record. This action cannot be undone.
                    </div>

                    <div class="text-center mb-4">
                        <div class="bg-danger bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                            <i class="bi bi-person-x fs-1 text-danger"></i>
                        </div>
                    </div>

                    <h5 class="text-center mb-3">@Model.FirstName @Model.LastName</h5>

                    <dl class="row mb-0">
                        <dt class="col-sm-4">Clinic Number</dt>
                        <dd class="col-sm-8"><code class="text-primary">@Model.ClinicNumber</code></dd>

                        <dt class="col-sm-4">Date of Birth</dt>
                        <dd class="col-sm-8">
                            @Model.DateOfBirth.ToString("MMM dd, yyyy")
                            <span class="text-muted">(@Model.Age years old)</span>
                        </dd>

                        <dt class="col-sm-4">Gender</dt>
                        <dd class="col-sm-8">@Model.Gender</dd>

                        <dt class="col-sm-4">Phone</dt>
                        <dd class="col-sm-8">@Model.PhoneNumber</dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@(Model.Email ?? "—")</dd>

                        <dt class="col-sm-4">National ID</dt>
                        <dd class="col-sm-8">@(Model.NationalId ?? "—")</dd>

                        <dt class="col-sm-4">Registered On</dt>
                        <dd class="col-sm-8">@Model.RegistrationDate.ToString("MMM dd, yyyy")</dd>

                        <dt class="col-sm-4">Blood Type</dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.BloodType))
                            {
                                <span class="badge bg-danger">@Model.BloodType</span>
                            }
                            else
                            {
                                <span class="text-muted">Unknown</span>
                            }
                        </dd>
                    </dl>
                </div>
                <div class="card-footer bg-light">
                    <form asp-action="Delete" method="post">
                        <input type="hidden" name="id" value="@Model.PatientId" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@Model.PatientId" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-1"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash me-1"></i> Delete Patient
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="alert alert-info mt-3">
                <i class="bi bi-lightbulb me-2"></i>
                <strong>Note:</strong> Deleting a patient will mark the record as deleted but preserve the data for audit purposes. 
                The patient's clinic number will become available for reuse.
            </div>
        </div>
    </div>
</div>
