@model ClinicMIS.Models.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="row g-4 mb-4">
    <!-- Today's Statistics Cards -->
    <div class="col-md-6 col-lg-3">
        <div class="card stat-card primary">
            <div class="card-body d-flex align-items-center">
                <div class="stat-icon me-3">
                    <i class="bi bi-calendar-check"></i>
                </div>
                <div>
                    <div class="text-muted small">Today's Visits</div>
                    <div class="fs-4 fw-bold">@Model.TodayVisits</div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-6 col-lg-3">
        <div class="card stat-card success">
            <div class="card-body d-flex align-items-center">
                <div class="stat-icon me-3">
                    <i class="bi bi-person-plus"></i>
                </div>
                <div>
                    <div class="text-muted small">New Patients Today</div>
                    <div class="fs-4 fw-bold">@Model.TodayNewPatients</div>
                </div>
            </div>
        </div>
    </div>
    
    @if (!User.IsInRole("Doctor"))
    {
        <div class="col-md-6 col-lg-3">
            <div class="card stat-card warning">
                <div class="card-body d-flex align-items-center">
                    <div class="stat-icon me-3">
                        <i class="bi bi-prescription2"></i>
                    </div>
                    <div>
                        <div class="text-muted small">Pending Prescriptions</div>
                        <div class="fs-4 fw-bold">@Model.PendingPrescriptions</div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-6 col-lg-3">
            <div class="card stat-card danger">
                <div class="card-body d-flex align-items-center">
                    <div class="stat-icon me-3">
                        <i class="bi bi-exclamation-triangle"></i>
                    </div>
                    <div>
                        <div class="text-muted small">Low Stock Alerts</div>
                        <div class="fs-4 fw-bold">@Model.LowStockAlerts</div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Monthly Stats Row -->
@if (!User.IsInRole("Pharmacist") && !User.IsInRole("Doctor"))
{
    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center py-4">
                    <div class="display-6 fw-bold text-primary">@Model.MonthlyRevenue.ToString("C")</div>
                    <div class="text-muted">Monthly Revenue</div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center py-4">
                    <div class="display-6 fw-bold text-success">@Model.MonthlyVisits</div>
                    <div class="text-muted">Monthly Visits</div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center py-4">
                    <div class="display-6 fw-bold text-info">@Model.MonthlyNewPatients</div>
                    <div class="text-muted">Monthly New Patients</div>
                </div>
            </div>
        </div>
    </div>
}

<div class="row g-4">
    <!-- Upcoming Visits -->
    @if (!User.IsInRole("Pharmacist"))
    {
        <div class="col-lg-6">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <span><i class="bi bi-calendar3 me-2"></i>Upcoming Visits</span>
                    <a asp-controller="Visits" asp-action="Index" class="btn btn-sm btn-outline-primary">View All</a>
                </div>
                <div class="card-body p-0">
                    @if (Model.UpcomingVisits.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Patient</th>
                                        <th>Clinic</th>
                                        <th>Doctor</th>
                                        <th>Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var visit in Model.UpcomingVisits)
                                    {
                                        <tr>
                                            <td>
                                                <a asp-controller="Patients" asp-action="Details" asp-route-id="@visit.PatientId">
                                                    @visit.Patient.FullName
                                                </a>
                                            </td>
                                            <td>@visit.Clinic.Name</td>
                                            <td>@(visit.Doctor?.DisplayTitle ?? "TBD")</td>
                                            <td>
                                                @visit.VisitDate.ToString("MMM dd")
                                                @if (visit.CheckInTime.HasValue)
                                                {
                                                    <small class="text-muted">@visit.CheckInTime.Value.ToString(@"hh\:mm")</small>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4 text-muted">
                            <i class="bi bi-calendar-x fs-1 d-block mb-2"></i>
                            No upcoming visits scheduled
                        </div>
                    }
                </div>
            </div>
        </div>
    }
    
    <!-- Pharmacy Queue -->
    @if (!User.IsInRole("Doctor"))
    {
        <div class="@(User.IsInRole("Pharmacist") ? "col-lg-12" : "col-lg-6")">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <span><i class="bi bi-prescription2 me-2"></i>Pharmacy Queue</span>
                    <a asp-controller="Pharmacy" asp-action="Index" class="btn btn-sm btn-outline-primary">View All</a>
                </div>
            <div class="card-body p-0">
                @if (Model.RecentPrescriptions.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Prescription</th>
                                    <th>Patient</th>
                                    <th>Items</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var rx in Model.RecentPrescriptions)
                                {
                                    <tr>
                                        <td>
                                            <a asp-controller="Pharmacy" asp-action="Dispense" asp-route-id="@rx.PrescriptionId">
                                                @rx.PrescriptionNumber
                                            </a>
                                        </td>
                                        <td>@rx.PatientName</td>
                                        <td>@rx.ItemCount items</td>
                                        <td>
                                            @if (rx.Status == ClinicMIS.Models.Entities.PrescriptionStatus.SentToPharmacy)
                                            {
                                                <span class="badge bg-warning">Pending</span>
                                            }
                                            else if (rx.Status == ClinicMIS.Models.Entities.PrescriptionStatus.Processing)
                                            {
                                                <span class="badge bg-info">Processing</span>
                                            }
                                        }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4 text-muted">
                        <i class="bi bi-check-circle fs-1 d-block mb-2"></i>
                        No pending prescriptions
                    </div>
                }
            </div>
        </div>
    </div>
    }
</div>

<!-- Low Stock Alerts -->
@if (Model.CriticalStockItems.Any())
{
    <div class="row mt-4">
        <div class="col-12">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <i class="bi bi-exclamation-triangle me-2"></i>Critical Stock Alerts
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Drug Code</th>
                                    <th>Drug Name</th>
                                    <th>Category</th>
                                    <th>Current Stock</th>
                                    <th>Reorder Level</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var drug in Model.CriticalStockItems)
                                {
                                    <tr class="@(drug.CurrentStock == 0 ? "table-danger" : "table-warning")">
                                        <td><code>@drug.DrugCode</code></td>
                                        <td>@drug.DrugName</td>
                                        <td>@drug.Category</td>
                                        <td>
                                            <span class="badge @(drug.CurrentStock == 0 ? "bg-danger" : "bg-warning")">
                                                @drug.CurrentStock
                                            </span>
                                        </td>
                                        <td>@drug.ReorderLevel</td>
                                        <td>
                                            <a asp-controller="Pharmacy" asp-action="EditDrug" asp-route-id="@drug.DrugId" 
                                               class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-pencil"></i> Update
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<!-- Quick Actions -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-lightning me-2"></i>Quick Actions
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-3">
                        <a asp-controller="Patients" asp-action="Create" class="btn btn-primary w-100 py-3">
                            <i class="bi bi-person-plus d-block fs-3 mb-1"></i>
                            Register Patient
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a asp-controller="Visits" asp-action="Create" class="btn btn-success w-100 py-3">
                            <i class="bi bi-calendar-plus d-block fs-3 mb-1"></i>
                            Schedule Visit
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a asp-controller="Prescriptions" asp-action="Create" class="btn btn-info w-100 py-3 text-white">
                            <i class="bi bi-file-earmark-plus d-block fs-3 mb-1"></i>
                            New Prescription
                        </a>
                    </div>
                    @if (!User.IsInRole("Doctor"))
                    {
                        <div class="col-md-3">
                            <a asp-controller="Reports" asp-action="Index" class="btn btn-secondary w-100 py-3">
                                <i class="bi bi-bar-chart d-block fs-3 mb-1"></i>
                                View Reports
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
