@using Microsoft.AspNetCore.Identity
@using ClinicMIS.Models.Entities
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Clinic MIS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        :root {
            --primary-color: #0d6efd;
            --sidebar-bg: #1a1d21;
            --sidebar-text: #adb5bd;
            --sidebar-active: #0d6efd;
            --header-height: 60px;
        }
        
        body {
            font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
            background-color: #f4f6f9;
        }
        
        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            width: 260px;
            height: 100vh;
            background: var(--sidebar-bg);
            color: var(--sidebar-text);
            z-index: 1000;
            transition: all 0.3s;
        }
        
        .sidebar-brand {
            height: var(--header-height);
            display: flex;
            align-items: center;
            padding: 0 1.5rem;
            background: rgba(0,0,0,0.2);
            border-bottom: 1px solid rgba(255,255,255,0.1);
        }
        
        .sidebar-brand h4 {
            color: #fff;
            margin: 0;
            font-weight: 600;
        }
        
        .sidebar-brand i {
            font-size: 1.5rem;
            margin-right: 0.75rem;
            color: var(--primary-color);
        }
        
        .sidebar-nav {
            padding: 1rem 0;
            overflow-y: auto;
            height: calc(100vh - var(--header-height));
        }
        
        .nav-section {
            padding: 0.5rem 1.5rem;
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            color: #6c757d;
            margin-top: 0.5rem;
        }
        
        .sidebar-nav .nav-link {
            color: var(--sidebar-text);
            padding: 0.75rem 1.5rem;
            display: flex;
            align-items: center;
            transition: all 0.2s;
            border-left: 3px solid transparent;
        }
        
        .sidebar-nav .nav-link:hover {
            background: rgba(255,255,255,0.05);
            color: #fff;
        }
        
        .sidebar-nav .nav-link.active {
            background: rgba(13, 110, 253, 0.15);
            color: var(--sidebar-active);
            border-left-color: var(--sidebar-active);
        }
        
        .sidebar-nav .nav-link i {
            width: 24px;
            margin-right: 0.75rem;
            font-size: 1.1rem;
        }
        
        .main-content {
            margin-left: 260px;
            min-height: 100vh;
        }
        
        .top-header {
            height: var(--header-height);
            background: #fff;
            border-bottom: 1px solid #e3e6ea;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 1.5rem;
            position: sticky;
            top: 0;
            z-index: 100;
        }
        
        .page-content {
            padding: 1.5rem;
        }
        
        .card {
            border: none;
            box-shadow: 0 0 10px rgba(0,0,0,0.05);
            border-radius: 0.5rem;
        }
        
        .card-header {
            background: #fff;
            border-bottom: 1px solid #e3e6ea;
            font-weight: 600;
        }
        
        .stat-card {
            border-left: 4px solid;
        }
        
        .stat-card.primary { border-left-color: #0d6efd; }
        .stat-card.success { border-left-color: #198754; }
        .stat-card.warning { border-left-color: #ffc107; }
        .stat-card.danger { border-left-color: #dc3545; }
        
        .stat-card .stat-icon {
            width: 48px;
            height: 48px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 0.5rem;
            font-size: 1.5rem;
        }
        
        .stat-card.primary .stat-icon { background: rgba(13, 110, 253, 0.1); color: #0d6efd; }
        .stat-card.success .stat-icon { background: rgba(25, 135, 84, 0.1); color: #198754; }
        .stat-card.warning .stat-icon { background: rgba(255, 193, 7, 0.1); color: #ffc107; }
        .stat-card.danger .stat-icon { background: rgba(220, 53, 69, 0.1); color: #dc3545; }
        
        .table th {
            font-weight: 600;
            color: #495057;
            border-top: none;
        }
        
        .badge-status {
            padding: 0.4em 0.8em;
            font-weight: 500;
        }
        
        .alert-floating {
            position: fixed;
            top: 80px;
            right: 20px;
            z-index: 1050;
            min-width: 300px;
            animation: slideIn 0.3s ease;
        }
        
        @@keyframes slideIn {
            from { transform: translateX(100%); opacity: 0; }
            to { transform: translateX(0); opacity: 1; }
        }
        
        .user-menu .dropdown-toggle::after {
            display: none;
        }
        
        .user-avatar {
            width: 36px;
            height: 36px;
            background: var(--primary-color);
            color: #fff;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
        }
        
        @@media (max-width: 992px) {
            .sidebar {
                transform: translateX(-100%);
            }
            .sidebar.show {
                transform: translateX(0);
            }
            .main-content {
                margin-left: 0;
            }
        }
    </style>
</head>
<body>
    @if (SignInManager.IsSignedIn(User))
    {
        <!-- Sidebar -->
        <nav class="sidebar">
            <div class="sidebar-brand">
                <i class="bi bi-hospital"></i>
                <h4>Clinic MIS</h4>
            </div>
            <div class="sidebar-nav">
                <div class="nav-section">Main</div>
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-speedometer2"></i> Dashboard
                </a>
                
                <div class="nav-section">Patient Care</div>
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Patients" ? "active" : "")" asp-controller="Patients" asp-action="Index">
                    <i class="bi bi-people"></i> Patients
                </a>
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Visits" ? "active" : "")" asp-controller="Visits" asp-action="Index">
                    <i class="bi bi-calendar-check"></i> Visits
                </a>
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Prescriptions" ? "active" : "")" asp-controller="Prescriptions" asp-action="Index">
                    <i class="bi bi-file-medical"></i> Prescriptions
                </a>
                
                <div class="nav-section">Pharmacy</div>
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Pharmacy" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")" asp-controller="Pharmacy" asp-action="Index">
                    <i class="bi bi-prescription2"></i> Dispense Queue
                </a>
                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Inventory" ? "active" : "")" asp-controller="Pharmacy" asp-action="Inventory">
                    <i class="bi bi-capsule"></i> Drug Inventory
                </a>
                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "LowStock" ? "active" : "")" asp-controller="Pharmacy" asp-action="LowStock">
                    <i class="bi bi-exclamation-triangle"></i> Low Stock Alerts
                </a>
                
                @if (!User.IsInRole("Doctor"))
                {
                    <div class="nav-section">Finance</div>
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Billings" ? "active" : "")" asp-controller="Billings" asp-action="Index">
                        <i class="bi bi-receipt"></i> Billings
                    </a>
                    <a class="nav-link" asp-controller="Billings" asp-action="Pending">
                        <i class="bi bi-clock-history"></i> Pending Payments
                    </a>
                }
                
                @if (!User.IsInRole("Doctor"))
                {
                    <div class="nav-section">Reports</div>
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Reports" ? "active" : "")" asp-controller="Reports" asp-action="Index">
                        <i class="bi bi-bar-chart"></i> Reports
                    </a>
                }
                
                @if (User.IsInRole("Admin"))
                {
                    <div class="nav-section">Administration</div>
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Staff" ? "active" : "")" asp-controller="Staff" asp-action="Index">
                        <i class="bi bi-person-badge"></i> Staff Management
                    </a>
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Clinics" ? "active" : "")" asp-controller="Clinics" asp-action="Index">
                        <i class="bi bi-building"></i> Clinics
                    </a>
                }
            </div>
        </nav>
        
        <!-- Main Content -->
        <div class="main-content">
            <header class="top-header">
                <div>
                    <h5 class="mb-0">@ViewData["Title"]</h5>
                </div>
                <div class="d-flex align-items-center gap-3">
                    <span class="text-muted small">@DateTime.Now.ToString("dddd, MMMM dd, yyyy")</span>
                    <div class="dropdown user-menu">
                        <a class="d-flex align-items-center text-decoration-none dropdown-toggle" href="#" data-bs-toggle="dropdown">
                            <div class="user-avatar me-2">
                                @User.Identity?.Name?.Substring(0, 1).ToUpper()
                            </div>
                            <span class="d-none d-md-inline">@User.Identity?.Name</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" asp-controller="Account" asp-action="ChangePassword"><i class="bi bi-key me-2"></i>Change Password</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form asp-controller="Account" asp-action="Logout" method="post">
                                    <button type="submit" class="dropdown-item text-danger"><i class="bi bi-box-arrow-right me-2"></i>Logout</button>
                                </form>
                            </li>
                        </ul>
                    </div>
                </div>
            </header>
            
            <main class="page-content">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-floating alert-dismissible fade show">
                        <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-floating alert-dismissible fade show">
                        <i class="bi bi-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                
                @RenderBody()
            </main>
        </div>
    }
    else
    {
        @RenderBody()
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    
    <script>
        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            document.querySelectorAll('.alert-floating').forEach(function(alert) {
                var bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
    </script>
</body>
</html>
