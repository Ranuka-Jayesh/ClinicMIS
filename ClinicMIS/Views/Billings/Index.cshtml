@model ClinicMIS.Models.ViewModels.BillingListViewModel
@using ClinicMIS.Models.Entities
@{
    ViewData["Title"] = "Billings";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <span class="text-muted">@Model.TotalCount billing records</span>
    </div>
    <a asp-action="Pending" class="btn btn-warning">
        <i class="bi bi-clock-history me-1"></i> Pending Payments
    </a>
</div>

<!-- Summary Cards -->
<div class="row mb-4">
    <div class="col-md-4">
        <div class="card stat-card primary h-100">
            <div class="card-body d-flex align-items-center">
                <div class="stat-icon me-3">
                    <i class="bi bi-receipt"></i>
                </div>
                <div>
                    <div class="text-muted small">Total Billed</div>
                    <div class="fs-4 fw-bold">@Model.TotalBilled.ToString("C")</div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card stat-card success h-100">
            <div class="card-body d-flex align-items-center">
                <div class="stat-icon me-3">
                    <i class="bi bi-cash-stack"></i>
                </div>
                <div>
                    <div class="text-muted small">Total Collected</div>
                    <div class="fs-4 fw-bold text-success">@Model.TotalPaid.ToString("C")</div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card stat-card @(Model.TotalOutstanding > 0 ? "danger" : "success") h-100">
            <div class="card-body d-flex align-items-center">
                <div class="stat-icon me-3">
                    <i class="bi bi-wallet2"></i>
                </div>
                <div>
                    <div class="text-muted small">Outstanding</div>
                    <div class="fs-4 fw-bold @(Model.TotalOutstanding > 0 ? "text-danger" : "text-success")">
                        @Model.TotalOutstanding.ToString("C")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Search and Filter -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-2">
                <label asp-for="FromDate" class="form-label small text-muted"></label>
                <input asp-for="FromDate" type="date" class="form-control form-control-sm" />
            </div>
            <div class="col-md-2">
                <label asp-for="ToDate" class="form-label small text-muted"></label>
                <input asp-for="ToDate" type="date" class="form-control form-control-sm" />
            </div>
            <div class="col-md-2">
                <label asp-for="Status" class="form-label small text-muted"></label>
                <select asp-for="Status" class="form-select form-select-sm">
                    <option value="">All Statuses</option>
                    @foreach (PaymentStatus status in Enum.GetValues(typeof(PaymentStatus)))
                    {
                        <option value="@((int)status)">@status</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label asp-for="SearchTerm" class="form-label small text-muted">Search</label>
                <div class="input-group input-group-sm">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <input asp-for="SearchTerm" class="form-control" placeholder="Invoice #, patient..." />
                </div>
            </div>
            <div class="col-md-2">
                <label asp-for="SortBy" class="form-label small text-muted">Sort By</label>
                <select asp-for="SortBy" class="form-select form-select-sm">
                    <option value="">Date</option>
                    <option value="patient">Patient</option>
                    <option value="amount">Amount</option>
                    <option value="status">Status</option>
                </select>
            </div>
            <div class="col-md-1 d-flex align-items-end">
                <button type="submit" class="btn btn-outline-primary btn-sm w-100">
                    <i class="bi bi-funnel"></i>
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Quick Filters -->
<div class="mb-3">
    <div class="btn-group btn-group-sm" role="group">
        <a href="@Url.Action("Index", new { FromDate = DateTime.Today, ToDate = DateTime.Today })" 
           class="btn @(Model.FromDate?.Date == DateTime.Today && Model.ToDate?.Date == DateTime.Today ? "btn-primary" : "btn-outline-primary")">
            Today
        </a>
        <a href="@Url.Action("Index", new { Status = (int)PaymentStatus.Pending })" 
           class="btn @(Model.Status == PaymentStatus.Pending ? "btn-secondary" : "btn-outline-secondary")">
            Pending
        </a>
        <a href="@Url.Action("Index", new { Status = (int)PaymentStatus.PartiallyPaid })" 
           class="btn @(Model.Status == PaymentStatus.PartiallyPaid ? "btn-warning" : "btn-outline-warning")">
            Partially Paid
        </a>
        <a href="@Url.Action("Index", new { Status = (int)PaymentStatus.Paid })" 
           class="btn @(Model.Status == PaymentStatus.Paid ? "btn-success" : "btn-outline-success")">
            Paid
        </a>
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
            Clear Filters
        </a>
    </div>
</div>

<!-- Billings Table -->
<div class="card">
    <div class="card-body p-0">
        @if (Model.Billings.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Invoice #</th>
                            <th>Patient</th>
                            <th>Date</th>
                            <th class="text-end">Total</th>
                            <th class="text-end">Paid</th>
                            <th class="text-end">Balance</th>
                            <th>Status</th>
                            <th>Method</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var billing in Model.Billings)
                        {
                            <tr>
                                <td>
                                    <code class="text-primary">@billing.InvoiceNumber</code>
                                    @if (billing.HasPrescription)
                                    {
                                        <i class="bi bi-capsule text-info ms-1" title="Has Prescription"></i>
                                    }
                                </td>
                                <td>
                                    <span class="fw-medium">@billing.PatientName</span>
                                    <br>
                                    <small class="text-muted">@billing.PatientClinicNumber</small>
                                </td>
                                <td>
                                    @billing.BillingDate.ToString("MMM dd, yyyy")
                                    @if (billing.BillingDate.Date == DateTime.Today)
                                    {
                                        <span class="badge bg-info ms-1">Today</span>
                                    }
                                </td>
                                <td class="text-end">@billing.TotalAmount.ToString("C")</td>
                                <td class="text-end text-success">@billing.AmountPaid.ToString("C")</td>
                                <td class="text-end @(billing.BalanceDue > 0 ? "text-danger fw-medium" : "")">
                                    @billing.BalanceDue.ToString("C")
                                </td>
                                <td>
                                    @{
                                        var statusClass = billing.PaymentStatus switch
                                        {
                                            PaymentStatus.Paid => "bg-success",
                                            PaymentStatus.PartiallyPaid => "bg-warning text-dark",
                                            PaymentStatus.Pending => "bg-secondary",
                                            PaymentStatus.Refunded => "bg-info",
                                            PaymentStatus.Waived => "bg-dark",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @statusClass">@billing.PaymentStatus</span>
                                </td>
                                <td>
                                    @if (billing.PaymentMethod.HasValue)
                                    {
                                        <small>@billing.PaymentMethod</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">â€”</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@billing.BillingId" 
                                           class="btn btn-outline-primary" title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Invoice" asp-route-id="@billing.BillingId" 
                                           class="btn btn-outline-secondary" title="Print Invoice" target="_blank">
                                            <i class="bi bi-printer"></i>
                                        </a>
                                        @if (billing.PaymentStatus != PaymentStatus.Paid && billing.PaymentStatus != PaymentStatus.Waived)
                                        {
                                            <a asp-action="Payment" asp-route-id="@billing.BillingId" 
                                               class="btn btn-outline-success" title="Record Payment">
                                                <i class="bi bi-credit-card"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            
            <!-- Pagination -->
            @if (Model.TotalPages > 1)
            {
                <nav class="d-flex justify-content-between align-items-center p-3 border-top">
                    <div class="text-muted small">
                        Showing @((Model.CurrentPage - 1) * Model.PageSize + 1) to 
                        @Math.Min(Model.CurrentPage * Model.PageSize, Model.TotalCount) of @Model.TotalCount
                    </div>
                    <ul class="pagination pagination-sm mb-0">
                        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link" href="?currentPage=@(Model.CurrentPage - 1)&fromDate=@Model.FromDate?.ToString("yyyy-MM-dd")&toDate=@Model.ToDate?.ToString("yyyy-MM-dd")&status=@((int?)Model.Status)&searchTerm=@Model.SearchTerm&sortBy=@Model.SortBy&sortDescending=@Model.SortDescending">
                                <i class="bi bi-chevron-left"></i>
                            </a>
                        </li>
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" href="?currentPage=@i&fromDate=@Model.FromDate?.ToString("yyyy-MM-dd")&toDate=@Model.ToDate?.ToString("yyyy-MM-dd")&status=@((int?)Model.Status)&searchTerm=@Model.SearchTerm&sortBy=@Model.SortBy&sortDescending=@Model.SortDescending">@i</a>
                            </li>
                        }
                        <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                            <a class="page-link" href="?currentPage=@(Model.CurrentPage + 1)&fromDate=@Model.FromDate?.ToString("yyyy-MM-dd")&toDate=@Model.ToDate?.ToString("yyyy-MM-dd")&status=@((int?)Model.Status)&searchTerm=@Model.SearchTerm&sortBy=@Model.SortBy&sortDescending=@Model.SortDescending">
                                <i class="bi bi-chevron-right"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            }
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-receipt fs-1 text-muted d-block mb-3"></i>
                <h5 class="text-muted">No billing records found</h5>
                @if (Model.FromDate.HasValue || Model.ToDate.HasValue || Model.Status.HasValue || !string.IsNullOrEmpty(Model.SearchTerm))
                {
                    <p class="text-muted">Try adjusting your filter criteria</p>
                    <a href="@Url.Action("Index")" class="btn btn-outline-primary">Clear Filters</a>
                }
                else
                {
                    <p class="text-muted">No invoices have been created yet</p>
                }
            </div>
        }
    </div>
</div>
